{
  "name": "mine-desktop",
  "private": true,
  "version": "1.0.0",
  "main": "./dist/resources/app/main/index.cjs",
  "author": {
    "name": "biaov",
    "email": "biaov@qq.com"
  },
  "description": "一个使用 Vite + TS + Vue3.x + Electron 开发的桌面软件 👍",
  "scripts": {
    "start": "npm run dev:app",
    "dev:vue": "vite",
    "dev:app": "node script/dev",
    "build": "npm run build:vue && npm run build:app",
    "build:vue": "vue-tsc --noEmit && vite build",
    "build:app": "node script/build",
    "preview": "vite preview",
    "lint": "eslint --fix ./src  --ext .vue,.ts",
    "prettier": "prettier --write '**/*.{ts,js,less,md,json,vue}'",
    "ncu": "ncu --configFileName .ncurc.json && npm i"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "desktop-software",
    "Electron",
    "TypeScript",
    "Vue",
    "Vue3",
    "VueJs",
    "Vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/biaov/mine-desktop.git"
  },
  "homepage": "https://github.com/biaov/mine-desktop.git",
  "bugs": {
    "url": "https://github.com/biaov/mine-desktop/issues"
  },
  "license": "ISC",
  "contributors": [
    {
      "name": "biaov",
      "email": "biaov@qq.com"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "cross-env": "^7.0.3",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.1.1",
    "less": "^4.1.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "vue-tsc": "^0.38.1"
  }
}